extends layout
block content
  .container.py-4.py-xl-5
    .row.row-cols-1.row-cols-md-2
      .col.d-flex.align-items-center
        img.img-fluid(src="../images/icons/pokeball.png" alt="pokeball" width="70%")
      .col.d-flex.p-4.mt-4.align-items-center
        div
          each item in items
            h4 #{item.heading}
            p  #{item.paragraph}
          ol
            li #{lists[0].item}
            li #{lists[1].item}
            li #{lists[2].item}
